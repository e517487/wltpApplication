<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.inetpsa.pct00.application</groupId>
    <artifactId>wltp-application</artifactId>
    <version>0.0.2-SNAPSHOT</version>
    <!--<packaging>war</packaging>-->
    <name>WLTP Application</name>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.0.3.RELEASE</version>
    </parent>

    <properties>
        <java.version>1.8</java.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.ws</groupId>
            <artifactId>spring-ws-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
            <version>4.5.5</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.ws</groupId>
            <artifactId>spring-ws-security</artifactId>
            <version>2.2.2.RELEASE</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <!-- tag::wsdl[] -->
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <version>0.12.3</version>
                <executions>
                    <execution>
                        <id>wsdl-config</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>


                        <configuration>
                            <schemaLanguage>WSDL</schemaLanguage>
                            <generatePackage>Config.wsdl</generatePackage>
                            <!--<generatePackage>Select.wsdl</generatePackage>-->
                            <!--<schemas>
                                <schema>
                                    <url>https://api.inetpsa.com/applications/moteur-de-configuration-vn/config/v1?client_id=748c557e-eb73-4434-b7a8-6e1e704abd14</url>
                                    <url>http://www.webservicex.com/stockquote.asmx?WSDL</url>
                                </schema>
                            </schemas>-->
                            <!--<schemaDirectory>${project.basedir}/src/main/resources/wsdl</schemaDirectory>-->
                            <schemaDirectory>${project.basedir}/src/main/resources/wsdl-config</schemaDirectory>
                            <schemaIncludes>
                                <include>*.wsdl</include>
                            </schemaIncludes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>wsdl-select</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <schemaLanguage>WSDL</schemaLanguage>
                            <generatePackage>Select.wsdl</generatePackage>
                            <schemaDirectory>${project.basedir}/src/main/resources/wsdl-select</schemaDirectory>
                            <schemaIncludes>
                                <include>*.wsdl</include>
                            </schemaIncludes>
                        </configuration>
                    </execution>
                </executions>

            </plugin>
            <!-- end::wsdl[] -->
        </plugins>
    </build>

</project>
